{
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./src",
    "outDir": "./es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": false,
    "removeComments": true
  }
}
